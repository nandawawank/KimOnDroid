<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.madwak.kimondroid.MainActivity">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="49sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtMiniTitle"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTitle"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/app_subname"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="italic" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnKompetensi"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/colorAccent"
            android:drawableLeft="@drawable/materi"
            android:drawableStart="@drawable/materi"
            android:onClick="funcKompetensi"
            android:padding="10dp"
            android:text="Kompetensi" />

        <Button
            android:id="@+id/btnMateri"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@id/btnKompetensi"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="70dp"
            android:background="@color/colorAccent"
            android:drawableLeft="@drawable/materi"
            android:drawableStart="@drawable/materi"
            android:onClick="funMateri"
            android:padding="10dp"
            android:text="Materi" />

        <Button
            android:id="@+id/btnQuiz"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@id/btnMateri"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="120dp"
            android:background="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_videogame"
            android:drawableStart="@drawable/ic_videogame"
            android:onClick="funcQuiz"
            android:padding="10dp"
            android:text="Quiz" />

        <Button
            android:id="@+id/btnPetunjuk"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@id/btnQuiz"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="170dp"
            android:background="@color/colorPrimaryDark"
            android:drawableLeft="@drawable/ic_help"
            android:drawableStart="@drawable/ic_help"
            android:onClick="funcPetunjuk"
            android:padding="10dp"
            android:text="Petunjuk" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnExit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:background="@drawable/ic_power_settings"
        android:backgroundTint="@color/colorAccent"
        android:onClick="funcExit" />

    <Button
        android:id="@+id/btnInfo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@id/btnExit"
        android:background="@drawable/ic_info_outline"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="funcInfo" />

    <Button
        android:id="@+id/btnMusic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@id/btnInfo"
        android:background="@drawable/ic_volume_up"
        android:onClick="funcMusic" />

</RelativeLayout>
