<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/papan"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context="com.madwak.kimondroid.InfoActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/colorAccent"
        android:textSize="50sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textView"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Merupakan media pembelajaran Kimia berbasis mobile yang pada seri ini berisikan materi sistem koloid.\nMedia pembelajaran ini dilengkapi dengan penjelasan materi, petunjuk pada aplikasi dan quiz yang dapat digunakan untuk membantu dalam pembelajran secara mandiri.\n"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView2"
                android:text="Materi:\nDenda\nPengembang:\nAhmad Tantowi\nNanda Wawan K\nMusik:\nhttps://bensound.com\n"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />
        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/colorPrimaryDark"
        android:drawableLeft="@drawable/back"
        android:drawableStart="@drawable/back"
        android:onClick="funcBack"
        android:padding="10dp"
        android:text="Back" />

</RelativeLayout>
